<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_arrow"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dip"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />


        <TextView
            android:text="@string/data_summary_footer_see_all"
            android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="viewStart"
            android:layout_marginRight="5dip" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/overflow_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="86dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/manager_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/data_alert_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="88dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical" />

        <TextView
            android:text="@string/reset_data_stats"
            android:id="@+id/reset_data_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="viewStart"
            android:paddingLeft="16dip"/>


        <LinearLayout
            android:id="@+id/other_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingBottom="17dp"
            android:orientation="vertical" />

        <TextView
            android:text="@string/network_restrictions"
            android:id="@+id/network_restrictions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="13dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="viewStart"
            android:paddingLeft="16dip"/>

        <TextView
            android:text="@string/mobile_networks"
            android:id="@+id/mobile_networks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="13dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="viewStart"
            android:paddingLeft="16dip"/>


    </LinearLayout>


</LinearLayout>
